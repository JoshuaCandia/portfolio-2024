---
import { basics } from "@cv";
import Section from "@/components/Section.astro";
import WorldMap from "@/icons/astro-icons/WorldMap.astro";

const { name, label, image, location } = basics;
const { city, region } = location;
---

<Section>
  <div
    class="flex items-center justify-center gap-4 flex-col-reverse md:flex-row"
  >
    <div
      class="flex flex-col gap-2 md:pr-8 justify-center items-center md:items-start text-center md:text-left"
    >
      <h1 class="dark:text-white text-2xl">{name}</h1>
      <h2
        class="dark:text-white/70 text-neutral-400 font-medium text-md [text-wrap:balance]"
      >
        {label}
      </h2>
      <span
        class="dark:text-white/70 text-neutral-400 flex items-center gap-1 tracking-tighter"
      >
        <WorldMap />
        {city}, {region}
      </span>
    </div>
    <figure class="flex justify-center items-center mx-auto">
      <img
        class="aspect-[1/1] object-cover w-[128px] rounded-[16px]"
        src={image}
        alt={name}
      />
    </figure>
  </div>
</Section>
